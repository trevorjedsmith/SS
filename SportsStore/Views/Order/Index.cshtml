
@{
    ViewBag.Title = "Order";
}

@section scripts{
    <script src="~/Scripts/app/common/Constants.js"></script>
    <script src="~/Scripts/app/data/SportsStoreDataService.js"></script>
    <script src="~/Scripts/app/common/Logger.js"></script>
    <script src="~/Scripts/app/ui/viewmodels/OrderViewModel.js"></script>
    <script src="~/Scripts/app/ui/controllers/OrderController.js"></script>

    <script>
        (function () {
             var orderController = new SportsStore.OrderController();
             orderController.PageLoad();
         })();
    </script>

}




<h2>My Order</h2>

<h3 class="text-muted">Checkout now</h3>
<p>Please enter you details and we will ship your good straight away</p>


    <h3 class="text-muted">Ship To</h3>
    <div class="form-group">
        <label>Name:</label>
        <input class="form-control" data-bind="value: name" name="name" id="name" required />
    </div>

    <h3 class="text-muted">Address</h3>
    <div class="form-group">
        <label>Line1:</label>
        <input class="form-control" data-bind="value: line1" name="line1" id="line1" required />
    </div>
    <div class="form-group">
        <label>Line2:</label>
        <input class="form-control" data-bind="value: line2" name="line2" id="line2" required />
    </div>
    <div class="form-group">
        <label>Line3:</label>
        <input class="form-control" data-bind="value: line3" name="line3" id="line3" required />
    </div>
    <div class="form-group">
        <label>City:</label>
        <input class="form-control" data-bind="value: city" name="city" id="city" required />
    </div>
    <div class="form-group">
        <label>State:</label>
        <input class="form-control" data-bind="value: state" name="state" id="state" required />
    </div>
    <div class="form-group">
        <label>Zip:</label>
        <input class="form-control" data-bind="value: zip" name="zip" id="zip" required />
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input class="form-control" data-bind="value: country" name="country" id="country" required />
    </div>

    <h3 class="text-muted">Options</h3>
    <div class="checkbox">
        <label><input type="checkbox" data-bind="value: giftwrap" />Gift wrap these items?</label>
    </div>

    <div class="text-center">
        <button class="btn btn-danger" style="width:200px;" data-bind="click: cancelConfirm">Cancel Order</button>
        <button type="submit" class="btn btn-success" style="width:200px;" data-bind="click: submitOrder">Submit Order</button>
    </div>


<div id="del-confirm" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Confirm delete</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this home?</p>
                <p class="alert alert-error push-down">
                    <strong>Note:</strong>
                    There is no undo for this action.
                </p>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn btn-primary" data-bind="click: cancelOrder">Clear Order</button>
            </div>
        </div>
    </div>
</div>

